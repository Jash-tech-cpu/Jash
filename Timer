import time
def countdown(t):
    while t:
        hrs, rem = divmod(t, 3600)
        mins, secs = divmod(rem, 60)
        timer = '{:02d}:{:02d}:{:02d}'.format(hrs, mins, secs)
        print(timer, end="\r")
        time.sleep(1)
        t -= 1
    print('\nTime is up!')
try:
    t = int(input('Enter the time in seconds: '))
    countdown(t)
except ValueError:
    print("Please enter a valid integer.")
