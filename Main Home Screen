import tkinter as tk
from PIL import Image, ImageTk

root = tk.Tk()

def setBg(window, ip):
    try:
        image = Image.open(ip)
        img = ImageTk.PhotoImage(image)
        bgl = tk.Label(window, image=img)
        bgl.place(x=0, y=0, relwidth=1, relheight=1)
        bgl.image = tk_image
    except FileNotFoundError:
        print(f"Error: Image file not found")

root = tk.Tk()
root.title("Background Image Example")
root.geometry("800x600")

setBg(root, 'your_image.jpg')

label = tk.Label(root, text="Hello, Tkinter!", font=("Arial", 24), bg="#FFFFFF")
label.place(relx=0.5, rely=0.5, anchor='center')

root.mainloop()
