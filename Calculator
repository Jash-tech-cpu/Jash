print("Calculator")
while True:
  user_choice = int(input("Options:\n1. Addition\n2. Subtraction\n3. Multiplication\n4. Division\n5. Exit\n")
  if user_choice == 1:
    amount = int(input("How many numbers are being added: ")
    for i in range(amount):
      numbers = int(input("Enter a number: ")
    for i in numbers:
  elif user_choice == 2:
    amount_1 = int(input("How many numbers are being subtracted: ")
    for i in range(amount_1):
      numbers_1 = int(input("Enter a number: ")
    for i in numbers_1:
  elif user_choice == 3:
    amount_2 = int(input("How many numbers are being multiplied: ")
    for i in range(amount_2):
      numbers_2 = int(input("Enter a number: ")
    for i in numbers_2:
  elif user_choice == 4:
    amount_3 = int(input("How many numbers are being divided: ")
    for i in range(amount_3):
      numbers_3 = int(input("Enter a number: ")
    for i in numbers_3:
  elif user_choice == 5:
    break
  else:
    print("Input is incorrect, please try again")
  
