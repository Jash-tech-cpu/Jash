#To import pillow do pip install Pillow in the terminal :)

import tkinter as tk
from tkinter import *
from PIL import Image, ImageTk # type: ignore
from tkinter import font
import random

root = tk.Tk()

# Get screen width and height
screen_width = root.winfo_screenwidth()
screen_height = root.winfo_screenheight()

# Set window size to match screen size
root.geometry(f"{screen_width}x{screen_height}")

# Load the image
bg = Image.open("game_bg.jpg")  # Replace with your image path

# Resize the image (width, height)
resized_bg = bg.resize((screen_width, screen_height))

# Convert the resized image to a Tkinter-compatible format
tk_image = ImageTk.PhotoImage(resized_bg)

background_label = tk.Label(root, image=tk_image)
background_label.place(x=0, y=0, relwidth=1, relheight=1)
background_label.image = tk_image # Keep a reference to the image

#Functions

def rock_stats():

    computer_num = random.randint(1, 3)
    print(computer_num)
    if computer_num == 1:
        computer_pick.config(text="Scissor")
        winning_label.config(text="🎉YOU WIN!!!🎉")
    if computer_num == 2:
        computer_pick.config(text="Paper")
        winning_label.config(text="😢You Lose😢")
    if computer_num == 3:
        computer_pick.config(text="Rock")
        winning_label.config(text="😐You Tied😐")
    

def paper_stats():

    computer_num = random.randint(1, 3)
    print(computer_num)
    if computer_num == 1:
        computer_pick.config(text="Scissor")
        winning_label.config(text="😢You Lose😢")
    if computer_num == 2:
        computer_pick.config(text="Paper")
        winning_label.config(text="😐You Tied😐")
    if computer_num == 3:
        computer_pick.config(text="Rock")
        winning_label.config(text="🎉YOU WIN!!!🎉")

def scissor_stats():

    computer_num = random.randint(1, 3)
    print(computer_num)
    if computer_num == 1:
        computer_pick.config(text="Scissor")
        winning_label.config(text="😐You Tied😐")
    if computer_num == 2:
        computer_pick.config(text="Paper")
        winning_label.config(text="🎉YOU WIN!!!🎉")
    if computer_num == 3:
        computer_pick.config(text="Rock")
        winning_label.config(text="😢You Lose😢")

#Rock Image

image = Image.open("rock_img.png")
rock = ImageTk.PhotoImage(image)

rock_button = tk.Button(root, image=rock, height=300, width=300, borderwidth=5, relief="solid", command=rock_stats)

rock_button.place(relx=0.15, rely=0.5)

#Paper Image

image2 = Image.open("paper_img.png")
paper = ImageTk.PhotoImage(image2)

paper_button = tk.Button(root, image=paper, height=300, width=300, borderwidth=5, relief="solid", command=paper_stats)

paper_button.place(relx=0.4, rely=0.5)

#Scissor Image

image3 = Image.open("scissor_img.png")
scissor = ImageTk.PhotoImage(image3)

scissor_button = tk.Button(root, image=scissor, height=300, width=300, borderwidth=5, relief="solid", command=scissor_stats)

scissor_button.place(relx=0.65, rely=0.5)

#Cool Pixel Text to Use

your_pick_label = tk.Label(root, text="Your Pick:", font=("Fixedsys", 20))
your_pick_label.place(relx=0.45, rely=0.425)

your_pick_label = tk.Label(root, text="Your Pick:", font=("Fixedsys", 20))
your_pick_label.place(relx=0.45, rely=0.425)

computer_label = tk.Label(root, text="Computer Choice: ", font=("Fixedsys", 20))
computer_label.place(relx=0.155, rely=0.175)

computer_pick = tk.Label(root, text="", font=("Fixedsys", 20))
computer_pick.place(relx=0.65, rely=0.175)

winning_label = tk.Label(root, text="", font=("Fixedsys", 30))
winning_label.place(relx=0.4225, rely=0.3)

rules_label = tk.Label(root, text="Rules:\n1. Click on the images for your choice\n2. To play again click another image", font=("Fixedsys", 10), justify="left", anchor="e")
rules_label.place(relx=0.4, rely=0.05)

root.mainloop()