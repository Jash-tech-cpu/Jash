#Add ScoreBoard
import random
print("This is the Rock Paper Scissors Game")
how_many = int(input("How many times do you want to play? ))
for i in range(how_many):
    print("1: Rock")
    print("2: Paper")
    print("3: Scissor")
    choices = ["Rock", "Paper", "Scissor"]
    computer = random.choice(choices)
    user_choice = int(input("Enter your choice: "))
    if computer == "Rock" and user_choice == 1:
        print("You and the computer tied")
    elif computer == "Paper" and user_choice == 2:
        print("You and the computer tied")
    elif computer == "Scissor" and user_choice == 3:
        print("You and the computer tied")
    elif computer == "Rock" and user_choice == 2:
        print("You win!")
    elif computer == "Rock" and user_choice == 3:
        print("The computer won")
    elif computer == "Paper" and user_choice == 1:
        print("The computer won")
    elif computer == "Scissor" and user_choice == 2:
        print("You win!")
    elif computer == "Paper" and user_choice == 3:
        print("You win!")
    else:
        print("Invalid")

